{
	"name": "HideAway",
	"version": "1.0.0",
	"description": "Simple Extension to hide any text on any website for more privacy",
	"manifest_version": 3,
	"author": "JustCallMeSimon",
	"permissions": ["activeTab"],
	"content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["replaceText.js"],
			"run_at": "document_start"
        }
    ],
	"action": {
		"default_popup": "index.html",
		"default_title": "HideAway"
	}

}